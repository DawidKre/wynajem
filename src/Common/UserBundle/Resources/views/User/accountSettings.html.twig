{% extends 'WynajemBlogBundle::base.html.twig' %}
{% set hideSidebar = true %}
{% block pageTitle %} Ustawienia konta {{ parent() }} {% endblock %}


{% block content %}
    <div role="main" class="main">
        <section class="page-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Logowanie/rejestracja</h1>
                    </div>
                </div>
            </div>
        </section>

        <div class="container">
            <div class="row">
                {% include 'WynajemBlogBundle:Template:flashMsg.html.twig' %}
                <div class="col-md-12">
                    <div class="row featured-boxes login">
                        <div class="col-sm-6">
                            <div class="featured-box featured-box-secundary default info-content">
                                <div class="box-content">
                                    <h4>Zmień dane konta</h4>
                                    {% form_theme accountSettingsForm 'WynajemBlogBundle:Form:form_template.html.twig' %}
                                    {{ form_start(accountSettingsForm) }}
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <img src="{{ asset(user.avatar) }}">
                                                {{ form_row(accountSettingsForm.avatarFile) }}
                                                {{ form_row(accountSettingsForm.username) }}
                                            </div>
                                            <div class="col-md-12 text-right">
                                                {{ form_rest(accountSettingsForm) }}
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_end(accountSettingsForm) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="featured-box featured-box-secundary default info-content">
                                <div class="box-content">
                                    <h4>Zmiana hasła</h4>
                                    {% form_theme changePasswordForm 'WynajemBlogBundle:Form:form_template.html.twig' %}
                                    {{ form(changePasswordForm, {'attr': {'novalidate': 'novalidate'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}