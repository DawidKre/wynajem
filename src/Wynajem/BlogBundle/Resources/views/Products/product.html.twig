{% extends 'WynajemBlogBundle::base.html.twig' %}

{% block pageTitle %} {{ product.name }} {{ parent() }} {% endblock %}



{% block content %}
    <div role="main" class="main shop">
    <section class="page-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>
                        {{ product.name }}
                    </h1>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
    <hr class="tall">
    <div class="row">
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-6">
                <div>
                    <div class="thumbnail">
                        <img alt="" class="img-responsive img-rounded"
                             src="{{ asset(product.thumbnail) }}">
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="summary entry-summary">
                    <h1 class="shorter"><strong>{{ product.name }}</strong></h1>
                    <p class="price">
                        <span class="amount">Cena za godzine: {{ product.priceForHour }} zł</span>
                    </p>
                    <p class="price">
                        <span class="amount">Cena za dzień: {{ product.priceForHour }} zł</span>
                    </p>

                    <p>Dostępność:</p>
                    <form enctype="multipart/form-data" method="post" class="cart">
                        <div class="quantity">
                            {% if product.available == true %}
                                <p>Produkt dostępny</p>
                                </div>
                                {#<button href="#" class="btn btn-primary btn-icon"> Wynajmij</button>#}
                            {% else %}
                                <p>Niedostępny</p>
                                </div>
                                {#<button href="#" class="btn btn-primary btn-icon" disabled="disabled"> Wynajmij</button>#}
                            {% endif %}

                    </form>
                    <div class="product_meta">
                        <span class="posted_in">Kategoria: <a rel="tag" href="{{ path('blog_category', {'slug': product.category.slug}) }}">{{ product.category.name }}</a></span>
                    </div>
                    <div class="product_meta">
                        <span class="posted_in">Tagi:
                        {% for tag in product.tags %}
                                <a rel="tag" href="{{ path('blog_tag', {'slug': tag.slug}) }}">{{ tag.name }}</a>,</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tabs tabs-product">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#productDescription" data-toggle="tab">Opis</a></li>
                        {#<li><a href="#productReviews" data-toggle="tab">Reviews (2)</a></li>#}
                    </ul>
                    {#<div class="tab-content">#}
                    <div class="tab-pane active" id="productDescription">
                        <p>
                            {{ product.description|raw }}
                        </p>
                    </div>
